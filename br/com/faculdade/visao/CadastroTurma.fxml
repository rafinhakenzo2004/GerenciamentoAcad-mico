      spacing="10" alignment="CENTER" prefWidth="300" prefHeight="150">

    <Label text="Selecione o Professor:" />

    <ComboBox fx:id="comboBoxProfessor" prefWidth="250" promptText="Escolha um professor" />

    <Button text="Salvar Turma" onAction="#handleSalvarTurma" prefWidth="150" />

</VBox>
