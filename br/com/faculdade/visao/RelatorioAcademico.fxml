<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10" padding="20">

    <Label text="Relatórios Acadêmicos" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Filtros -->
    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="Tipo de Relatório" />
            <ComboBox fx:id="comboTipoRelatorio" prefWidth="250" />
        </VBox>
        <VBox spacing="5">
            <Label text="Curso" />
            <ComboBox fx:id="comboCurso" prefWidth="250" />
        </VBox>
        <VBox spacing="5">
            <Label text="Semestre" />
            <TextField fx:id="txtSemestre" promptText="ex: 2025.1" />
        </VBox>
        <Button fx:id="btnGerar" text="Gerar Relatório" alignment="CENTER" />
    </HBox>

    <!-- Resultado -->
    <Label text="Resultado" style="-fx-font-weight: bold;" />
    <TextArea fx:id="txtResultado" prefRowCount="20" prefWidth="700" wrapText="true" editable="false" />

</VBox>
